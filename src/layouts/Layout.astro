---
import Header from '@/components/Header.astro';
import ViewTransitions from 'astro/components/ViewTransitions.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-slate-800 text-gray-200">
	<div class="container flex justify-center items-center flex-col mx-auto p-6">
		<Header />
		<main class="my-10">
			<slot />
		</main>
	</div>
	</body>
</html>

<style is:global>
	@font-face {
		font-family: "ScaryHalloweenFont";
		src: url("/fonts/ScaryHalloweenFont.ttf");
		font-weight: normal;
		font-style: normal;
	}

	h1, h2 {
		font-family: 'ScaryHalloweenFont', sans-serif;
	}

	.links {
		@apply font-semibold capitalize p-2 hover:bg-slate-900 transition ease-in-out;
	}
</style>