---
interface Props {
  title: string;
  description: string;
  link: string
}

const { title, description, link } = Astro.props
---

<article class="lg:grid lg:grid-cols-2 mt-10 justify-center items-center mx-auto gap-4">
  <div class="lg:w-auto">
    <h3 class="text-xl lg:text-2xl my-4 text-orange-300 font-medium">{title}</h3>
    <p>{description}</p>
  </div>
  <!-- Aqui iran dos imagenes -->
  <div class="lg:w-auto mt-4">
    <two-up>
      <img src="https://res.cloudinary.com/die9r7flu/image/upload/rcgrxuxlibwe6e6hiiyl.jpg" alt="">
      <img src="https://res.cloudinary.com/die9r7flu/image/upload/e_gen_background_replace:prompt_a%20scary%20background%20full%20of%20zombies/rcgrxuxlibwe6e6hiiyl.jpg" alt="">
    </two-up>
    <div class="mt-4"></div>
    <a href={link} class="p-2 rounded-lg bg-slate-600 font-bold hover:bg-slate-700 transition ease-in-out block text-center w-full md:w-1/2 lg:w-1/4">Probar ahora</a>
  </div>
</article>

<script>
  import 'two-up-element'
</script>