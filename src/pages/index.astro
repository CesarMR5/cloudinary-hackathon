---
import FeatureCard from '@/components/FeatureCard.astro';
import Layout from '@/layouts/Layout.astro';
import { cardInfo } from '@/utils/consts'
---

<Layout title="Spookify | Inicio">
  <section class="flex flex-col justify-center items-center mx-auto">
    <h2 class="text-2xl lg:text-3xl font-bold text-amber-700 text-center">
      Convierte tus imagenes en obras aterradoras
    </h2>
    <p class="text-lg lg:text-xl mt-4 text-orange-300 font-medium text-center">
      Usa el poder de la Inteligencia Artificial para convertir tus fotos en algo terrorificamente genial
    </p>
  </section>

  <section class="flex flex-col justify-center items-center mx-auto p-4 w-5/6">
    {
      cardInfo.map(({title, description, link, image}) => (
        <FeatureCard 
          title={title}
          description={description}
          link={link}
          image={image}
        />
      ))
    }
  </section>
</Layout>

<style>
  h2 {
    text-shadow: 2px 2px 8px rgb(190, 242, 100, 0.3);
    animation: spookyGlow 2.0s ease-in-out infinite;
  }

  @keyframes spookyGlow {
    0%, 100% {
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.8), 0 0 10px #ff7f50, 0 0 15px #ff7f50;
    }
    50% {
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.8), 0 0 20px #ff4500, 0 0 30px #ff4500;
    }
  }
</style>